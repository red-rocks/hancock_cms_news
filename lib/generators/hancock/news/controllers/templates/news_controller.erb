class <%= camelcased_pluralized_class_name %>Controller < Hancock::News::NewsController

  private
  def category_class
    <%= category_class_name %>
  end
  def news_class
    <%= camelcased_class_name %>
  end

  def per_page
    if Hancock::News.config.model_settings_support
      Hancock::News::News.settings.per_page(kind: :integer, default: Hancock::News.config.news_per_page)
    else
      Hancock::News.config.news_per_page
    end
  end
  def after_initialize
  end
end
